import sys
from PyQt5.QtWidgets import QApplication, QWidget, QPushButton, QHBoxLayout, QVBoxLayout, QGroupBox, QLabel
from PyQt5.QtCore import Qt, QTimer, QPointF
from PyQt5.QtGui import QPainter, QColor, QPen, QPainterPath

class Rura:
    #klasa reprezentująca rure która może wizualnie symulowac przepływ cieczy
    def __init__(self, punkty, grubosc=12, kolor=Qt.gray):
        self.punkty = [QPointF(float(p[0]), float(p[1])) for p in punkty]
        self.grubosc = grubosc
        self.kolor_rury = kolor
        self.kolor_cieczy = QColor(0, 180, 255)
        self.czy_plynie = False

    def ustaw_przeplyw(self, plynie):
        self.czy_plynie = plynie


    def draw(self, painter):
        if len(self.punkty) < 2:
            return

        path = QPainterPath()
        path.moveTo(self.punkty[0])
        for p in self.punkty[1:]:
            path.lineTo(p)

        # 1.rysowanie obudowy rury
        pen_rura = QPen(self.kolor_rury, self.grubosc, Qt.SolidLine, Qt.RoundCap, Qt.RoundJoin)
        painter.setPen(pen_rura)
        painter.setBrush(Qt.NoBrush)
        painter.drawPath(path)

        # 2.rysowanie cieczy w środku (jesli plynie)
        if self.czy_plynie:
            pen_ciecz = QPen(self.kolor_cieczy, self.grubosc - 4, Qt.SolidLine, Qt.RoundCap, Qt.RoundJoin)
            painter.setPen(pen_ciecz)
            painter.drawPath(path)


class Zbiornik:
    #klasa reprezentujaca prostokatny zbiornik z poziomem napelnienia
    def __init__(self, x, y, width=100, height=140, nazwa=""):
        self.x = x
        self.y = y
        self.width = width
        self.height = height
        self.nazwa = nazwa
       
        self.pojemnosc = 100.0
        self.aktualna_ilosc = 0.0
        self.poziom = 0.0

    def dodaj_ciecz(self, ilosc):
        #dodaje ciecz do zbiornik zwraca faktyczną dodaną ilość
        wolne = self.pojemnosc - self.aktualna_ilosc
        dodano = min(ilosc, wolne)
        self.aktualna_ilosc += dodano
        self.aktualizuj_poziom()
        return dodano

    def usun_ciecz(self, ilosc):
        #usuwa ciecz ze zbiornika zwraca faktyczna usunieta ilosc
        usunieto = min(ilosc, self.aktualna_ilosc)
        self.aktualna_ilosc -= usunieto
        self.aktualizuj_poziom()
       
        return usunieto

    def aktualizuj_poziom(self):
    #przelicza aktualny poziom napełnienia (0.0 do 1.0)
        self.poziom = self.aktualna_ilosc / self.pojemnosc

    def czy_pusty(self):
        #sprawdza czy zbiornik jest praktycznie pusty
        return self.aktualna_ilosc <= 0.1

    def czy_pelny(self):
        #sprawdza, czy zbiornik jest praktycznie pelny
        return self.aktualna_ilosc >= self.pojemnosc - 0.1

    def punkt_gora_srodek(self):
        #zwraca srodek gornej krawezi jako krotkę (x, y)
        return (self.x + self.width / 2, self.y)

    def punkt_dol_srodek(self):
       
        return (self.x + self.width / 2, self.y + self.height)

    def draw(self, painter):
        #rysuje zbiornik ciecz i podpis
        # 1. rysowanie cieczy
        if self.poziom > 0:
            h_cieczy = self.height * self.poziom
            y_start = self.y + self.height - h_cieczy
            painter.setPen(Qt.NoPen)
            painter.setBrush(QColor(0, 120, 255, 200))
            painter.drawRect(int(self.x + 3), int(y_start), int(self.width - 6), int(h_cieczy - 2))

        # 2. rysowanie obrysu
        pen = QPen(Qt.white, 4)
        pen.setJoinStyle(Qt.MiterJoin)
        painter.setPen(pen)
        painter.setBrush(Qt.NoBrush)
        painter.drawRect(int(self.x), int(self.y), int(self.width), int(self.height))

        painter.setPen(Qt.white)
        painter.drawText(int(self.x), int(self.y - 10), self.nazwa)

#klasa symulacji kaskady

class SymulacjaKaskady(QWidget):
    #glowna klasa aplikacji zawierająca logike symulacji i interfejs sterujacy
    def __init__(self):
        super().__init__()
        self.setWindowTitle("Kaskada z recznym sterowaniem)")
        self.setFixedSize(900, 600)
        self.setStyleSheet("background-color: #222;")

        #konfiguracja zbiorników i rur
        self.z1 = Zbiornik(50, 50, nazwa="zbiornik 1")
        self.z1.aktualna_ilosc = 100.0
        self.z1.aktualizuj_poziom()

        self.z2 = Zbiornik(350, 190, nazwa="zbiornik 2")
        self.z3 = Zbiornik(650, 320, nazwa="zbiornik 3")
        self.zbiorniki = [self.z1, self.z2, self.z3]

        #rura 1
        p_start = self.z1.punkt_dol_srodek()
        p_koniec = self.z2.punkt_gora_srodek()
        mid_y = (p_start[1] + p_koniec[1]) / 2
        self.rura1 = Rura([p_start, (p_start[0], mid_y), (p_koniec[0], mid_y), p_koniec])

        #rura 2:
        p_start2 = self.z2.punkt_dol_srodek()
        p_koniec2 = self.z3.punkt_gora_srodek()
        mid_y2 = (p_start2[1] + p_koniec2[1]) / 2
        self.rura2 = Rura([p_start2, (p_start2[0], mid_y2), (p_koniec2[0], mid_y2), p_koniec2])
        self.rury = [self.rura1, self.rura2]

        #timer i sterowanie symulacja
        self.timer = QTimer()
        self.timer.timeout.connect(self.logika_przeplywu)

        self.btn_start_stop = QPushButton("start / stop", self)
        self.btn_start_stop.setStyleSheet("background-color: #444; color: white;")
        self.btn_start_stop.clicked.connect(self.przelacz_symulacje)
        self.running = False
        self.flow_speed = 0.8

        #dodanie interfejsu sterowania
        self.utworz_panel_sterowania()

        #uzycie layoutu do pozycjonowania przyciskow
        hbox = QHBoxLayout()
        hbox.addWidget(self.btn_start_stop)
        hbox.addWidget(self.sterowanie_group) #dodanie nowego panelu

        vbox = QVBoxLayout(self)
        vbox.addStretch() #rozciąga gorną czesc pozostawiając miejsce na grafikę
        vbox.addLayout(hbox)
       
        #ustawienie przycisków w dolnej czesci okna
        self.btn_start_stop.setGeometry(50, 550, 100, 30) #zachowanie starej pozycji jako bazowej
        self.sterowanie_group.setGeometry(160, 540, 700, 50)


    def utworz_panel_sterowania(self):
        #tworzy grupe przyciskow do recznego sterowania zbiornikami
        self.sterowanie_group = QGroupBox("Ręczne Sterowanie Zbiornikami")
        self.sterowanie_group.setStyleSheet("color: white;")
        layout = QHBoxLayout()

        zbiorniki_do_kontroli = [(self.z1, "Z1"), (self.z2, "Z2"), (self.z3, "Z3")]

        for i, (zbiornik, nazwa) in enumerate(zbiorniki_do_kontroli):
            #etykieta zbiornika
            label = QLabel(nazwa)
            label.setStyleSheet("color: #aaa;")
            layout.addWidget(label)
           
            #przycisk napelnij
            btn_fill = QPushButton(" [+] Napełnij")
            btn_fill.clicked.connect(lambda _, z=zbiornik: self.ustaw_poziom(z, 1.0))
            layout.addWidget(btn_fill)

            #przycisk oproznij
            btn_empty = QPushButton(" [-] Opróżnij")
            btn_empty.clicked.connect(lambda _, z=zbiornik: self.ustaw_poziom(z, 0.0))
            layout.addWidget(btn_empty)
           

        self.sterowanie_group.setLayout(layout)

    def ustaw_poziom(self, zbiornik, poziom):
        #slot obsługujacy reczne ustawianie poziomu cieczy (0.0 lub 1.0)
        if poziom == 1.0:
            zbiornik.aktualna_ilosc = zbiornik.pojemnosc
        else:
            zbiornik.aktualna_ilosc = 0.0
           
        zbiornik.aktualizuj_poziom()
        self.update() #odswiezenie widoku po recznej zmianie

    def przelacz_symulacje(self):
        #wlacza/wylacza timer symulacji
        if self.running:
            self.timer.stop()
        else:
            self.timer.start(20)
        self.running = not self.running

    def logika_przeplywu(self):
        #logika transferu cieczy miedzy zbiornikami
        # 1.przepływ z1
        plynie_1 = False
        if not self.z1.czy_pusty() and not self.z2.czy_pelny():
            ilosc = self.z1.usun_ciecz(self.flow_speed)
            self.z2.dodaj_ciecz(ilosc)
            plynie_1 = True
        self.rura1.ustaw_przeplyw(plynie_1)

        # 2.przepływ z2
        plynie_2 = False
        if self.z2.aktualna_ilosc > 5.0 and not self.z3.czy_pelny():
            ilosc = self.z2.usun_ciecz(self.flow_speed)
            self.z3.dodaj_ciecz(ilosc)
            plynie_2 = True
        self.rura2.ustaw_przeplyw(plynie_2)

        self.update()

    def paintEvent(self, event):
        #metoda rysowania niestandardowych elementów widzetu
        p = QPainter(self)
        p.setRenderHint(QPainter.Antialiasing)
       
        #rysowanie elementow wizualnych
        for r in self.rury:
            r.draw(p)
        for z in self.zbiorniki:
            z.draw(p)

if __name__ == '__main__':
    app = QApplication(sys.argv)
    okno = SymulacjaKaskady()
    okno.show()
    sys.exit(app.exec_())
